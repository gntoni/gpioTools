#include "gpiotools.h"


CGpio::CGpio(int num)
{
  this->id=num;
}

CGpio::~gpio()
{
}

int CGpio::open(void)
{
  //Export pin
  ofstream gpioFile (SYSFS_GPIO_DIR "/export");
  if (gpioFile.is_open())
  {
    gpioFile << this->id;
    gpioFile.close();
    return 0;  
  }
  else
  {
    std::cout << "Unable to export pin" << std::endl; 
  }
}

int CGpio::close(void)
{
  //Unexport pin
  ofstream gpioFile (SYSFS_GPIO_DIR "/unexport");
  if (gpioFile.is_open())
  {
    gpioFile << this->id;
    gpioFile.close();
    return 0;  
  }
  else
  {
    std::cout << "Unable to export pin" << std::endl; 
  }
}

int CGpio::setEdge(std::string)
{
}

int CGpio::setDirection(std::string)
{
}

int CGpio::setValue(int)
{
}

int CGpio::getValue(void)
{
}

int CGpio::getId(void)
{
}
